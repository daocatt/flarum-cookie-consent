{
    "name": "gtdxyz/flarum-cookie-consent",
    "description": "Customizable cookie consent notice",
    "keywords": [
        "extension",
        "flarum",
        "partialdev",
        "customizable",
        "cookie",
        "consent"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "authors": [
        {
            "name": "Dev",
            "email": "hello@dev.gtd.xyz"
        }
    ],
    "support": {
        "forum": "https://dev.gtd.xyz"
    },
    "homepage": "https://dev.gtd.xyz",
    "require": {
        "flarum/core": "^1.8.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "flarum-extension": {
            "title": "GTD Cookie Consent",
            "category": "feature",
            "icon": {
                "name": "fas fa-cookie",
                "backgroundColor": "#e74c3c",
                "color": "#FFF"
            }
        },
        "flagrow": {
            "discuss": "https://dev.gtd.xyz"
        }
    },
    "autoload": {
        "psr-4": {
            "Gtdxyz\\CookieConsent\\": "src/"
        }
    },
    "require-dev": {
        "flarum/phpstan": "*"
    },
    "scripts": {
        "analyse:phpstan": "phpstan analyse",
        "clear-cache:phpstan": "phpstan clear-result-cache"
    },
    "scripts-descriptions": {
        "analyse:phpstan": "Run static analysis"
    }
}
